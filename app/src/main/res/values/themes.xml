<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="mainPageButtonText"/>
    <attr name="mainPageButtonBackground"/>
    <attr name="mainPageBackground"/>

    <attr name="settingsPageTitleText"/>
    <attr name="settingsPageButtonText"/>
    <attr name="settingsPageIcoColor"/>
    <attr name="settingsPageBackground"/>

    <attr name="searchPageTitleText"/>
    <attr name="searchPageButtonText"/>
    <attr name="searchPageIcoColor"/>
    <attr name="searchPageBackground"/>
    <attr name="searchPageGreyTint"/>





    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PlaylistMaker.Main">
        <item name="mainPageButtonText">@color/dirty_black</item>
        <item name="mainPageButtonBackground">@color/dirty_white</item>
        <item name="mainPageBackground">@color/blue_background</item>
    </style>

    <style name="Theme.PlaylistMaker.Settings">
        <item name="settingsPageTitleText">@color/dirty_black</item>
        <item name="settingsPageButtonText">@color/black</item>
        <item name="settingsPageIcoColor">@color/light_grey</item>
        <item name="settingsPageBackground">@color/dirty_white</item>
    </style>

    <style name="Theme.PlaylistMaker.Search">
        <item name="searchPageTitleText">@color/dirty_black</item>
        <item name="searchPageButtonText">@color/dirty_black</item>
        <item name="searchPageIcoColor">@color/light_grey</item>
        <item name="searchPageBackground">@color/dirty_white</item>
        <item name="searchPageGreyTint">@color/grey_tint_search</item>

    </style>

</resources>