<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="mainPageButtonText" />
    <attr name="mainPageButtonBackground" />
    <attr name="mainPageBackground" />

    <attr name="settingsPageTitleText" />
    <attr name="settingsPageButtonText" />
    <attr name="settingsPageIcoColor" />
    <attr name="settingsPageBackground" />
    <attr name="settingsButtonsTint"/>

    <attr name="searchPageTitleText" />
    <attr name="searchPageButtonText" />
    <attr name="searchPageIcoColor" />
    <attr name="searchPageBackground" />
    <attr name="searchPageGreyTint" />
    <attr name="searchPageWhite" />



    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="Theme.PlaylistMaker.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="mainPageButtonText">@color/dirty_black</item>
        <item name="mainPageButtonBackground">@color/dirty_white</item>
        <item name="mainPageBackground">@color/blue</item>
    </style>

    <style name="Theme.PlaylistMaker.Settings">
        <item name="settingsPageTitleText">@color/dirty_black</item>
        <item name="settingsPageButtonText">@color/black</item>
        <item name="settingsPageIcoColor">@color/grey</item>
        <item name="settingsPageBackground">@color/dirty_white</item>
        <item name="settingsButtonsTint">@color/white</item>
    </style>

    <style name="Theme.PlaylistMaker.Search">
        <item name="searchPageTitleText">@color/dirty_black</item>
        <item name="searchPageButtonText">@color/dirty_black</item>
        <item name="searchPageIcoColor">@color/grey</item>
        <item name="searchPageBackground">@color/dirty_white</item>
        <item name="searchPageGreyTint">@color/search_tint_grey</item>

    </style>

</resources>