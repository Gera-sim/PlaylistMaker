<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/mainPageButtonText</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/margin_10</item>
        <item name="iconTint">@color/dirty_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">@dimen/margin_30</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/settingsButtonsTint</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/settingsPageIcoColor</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="SettingsButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_21</item>
        <item name="android:layout_marginBottom">@dimen/margin_21</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">?attr/settingsPageBackground</item>
        <item name="android:textColor">?attr/settingsPageButtonText</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="Search_placeholder_items">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/search_title</item>
    </style>


    <!--            !!!   у стиля есть наследник этажом ниже  !!!     -->

    <style name="track_info_behind_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:textColor">@color/track_info_behind_player</item>
        <item name="android:paddingHorizontal">@dimen/margin_16</item>
        <item name="android:paddingVertical">@dimen/margin_8</item>
    </style>


    <!--            !!!   у стиля есть родитель этажом выше   !!!     -->

    <style name="track_data_behind_player" parent="track_info_behind_player">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:textColor">@color/search_title</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:backgroundTint">@color/search_title</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/search_error_button</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="iconTint">@color/track_name</item>
    </style>


    <style name="PlayListCreateTextInputLayout"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="PlayListCreateButton"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/search_background</item>
        <item name="backgroundTint">@color/color_states_material_button</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="add_to_playlist_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/search_error_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">15dp</item>
        <item name="android:backgroundTint">@color/search_title</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>


    <style name="PlayListCreateEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:maxLength">255</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>