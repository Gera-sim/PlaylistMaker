<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/search_background"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/margin_8"
    android:paddingVertical="@dimen/margin_8">

    <ImageView
        android:id="@+id/ivTrackArt"
        android:layout_width="@dimen/track_pic_size"
        android:layout_height="@dimen/track_pic_size"
        android:contentDescription="@string/track_pic"
        android:src="@drawable/track_pic"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:lines="1"
            android:textColor="@color/track_name"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_16"
            tools:text="Yesterday once more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/author_name"
                android:textFontWeight="400"
                android:textSize="@dimen/text_size_11"
                tools:text="Carpenters" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/author_name"
                android:padding="5dp"
                android:src="@drawable/ellipse"
                app:tint="@color/author_name" />

            <TextView
                android:id="@+id/tvTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/author_name"
                android:textFontWeight="400"
                android:textSize="@dimen/text_size_11"
                tools:text="03:55" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/more"
        android:src="@drawable/menu" />

</LinearLayout>