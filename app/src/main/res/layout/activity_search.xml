<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/dirty_white"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Home2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="?attr/settingsPageBackground"
            app:icon="@drawable/back"
            app:iconGravity="textStart"
            app:iconTint="@color/dirty_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/search"
            android:textColor="?attr/settingsPageTitleText"
            android:textSize="@dimen/main_page_text_size" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"

        >

        <EditText
            android:id="@+id/SearchText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/grey_tint_search"
            android:drawableStart="@drawable/small_search"
            android:drawablePadding="8dp"
            android:drawableTint="@color/light_grey"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLength="255"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="32dp"
            android:textColor="@color/dirty_black"
            android:textColorHint="@color/light_grey"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center|end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone"
            app:tint="@color/light_grey" />
    </FrameLayout>

</LinearLayout>