<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/settingsPageBackground"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="?attr/settingsPageBackground"
            android:stateListAnimator="@null"
            app:icon="@drawable/back"
            app:iconGravity="textStart"
            app:iconTint="@color/dirty_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/settings_ru"
            android:textColor="?attr/settingsPageTitleText"
            android:textSize="@dimen/main_page_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsButtonText"
            android:text="@string/dark_theme" />

        <Switch
            android:id="@+id/switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:checked="false"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsButtonText"
            android:text="@string/share_this_app" />

        <Button
            style="@style/SettingsButton"
            app:icon="@drawable/share" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsButtonText"
            android:text="@string/contact_with_support" />

        <Button
            style="@style/SettingsButton"
            app:icon="@drawable/support" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsButtonText"
            android:text="@string/end_user_license_agreement" />

        <Button
            style="@style/SettingsButton"
            app:icon="@drawable/menu" />
    </LinearLayout>

</LinearLayout>